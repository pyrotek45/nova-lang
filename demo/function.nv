module functionDemo

// Function creation
fn hello() {
    println("hello world")
}

// Calling a function
hello()

// Nova uses universal function call syntax. Any function can be called this way.
fn extends show(input: String) {
    println(input)
}

"wow".show()

// This makes it easy to chain
fn extends square(x:Int) -> Int {
    return x * x
}

5.square().square() |> println()